<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet"  href="/style.css" />
</head>
<body>
    <div id="main"></div>
    <script type="text/template" id="announcementsView">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Details</th>
                    <th>Date</th>
                    <th>Created On</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </script>
    <script type="text/template" id="announcementView">
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{details}}</td>
            <td>{{date}}</td>
            <td>{{createdOn}}</td>
        </tr>
    </script>
    <script type="text/template" id="createAnnouncementView">
    <form method="post" action="/announcements">
        <p>Name: <input type="text" id="name" /></p>
        <p>Details: <textarea id="details"></textarea></p>
        <p>Date: <input type="date" id="date" /></p>
        <p><button> Create </button></p>
    </form>
    </script>
    <script src="/jquery.js"></script>
    <script src="/underscore.js"></script>
    <script src="/backbone.js"></script>
    <script src="/models.js"></script>
    <script src="/views.js"></script>
    <script src="/router.js"></script>
    <script>
        var r = new AppRouter({
            main: $("#main"),
            announcements: new Announcements(<%- announcements %>)
        });
        Backbone.history.start({ pushState: true });
    </script>
</body>
</html>
