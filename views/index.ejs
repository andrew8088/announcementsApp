<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet"  href="/bootstrap.min.css" />
</head>
<body>
    <div id="main"></div>
    <script type="text/template" id="eventsView">
        <thead>
            <tr>
                <th data-field="id">ID</th>
                <th data-field="title">Title</th>
                <th data-field="details">Details</th>
                <th data-field="date">Date</th>
                <th data-field="createdOn">Created On</th>
            </tr>
        </thead>
        <tbody></tbody>
    </script>
    <script type="text/template" id="eventView">
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{details}}</td>
        <td>{{date}}</td>
        <td>{{createdOn}}</td>
        <td>
            <button class="edit btn btn-inverse">
                <i class="icon-edit icon-white"></i>
            </button>
            <button class="delete btn btn-danger">
                <i class="icon-trash"></i>
            </button>
        </td>
    </script>
    <script type="text/template" id="modifyEventView">
    <div class="modal-header">
        <button class="close">&times;</button>
        <h3> {{ heading }} </h3>
    </div>
    <div class="modal-body">
    <form>
        <label>Title</label>
        <input type="text" id="title" value="{{title}}" />
        <label>Details</label>
        <textarea id="details">{{details}}</textarea>
        <label>Date</label>
        <input type="date" id="date" value="{{date}}" />    
    </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="modify btn btn-primary"> {{btnText}} </a>
    </div>
    </script>
    <script type="text/template" id="controlsView">
        <li><a href="/create"> Create Event </a></li>
    </script>
    <script src="/jquery.js"></script>
    <script src="/bootstrap.min.js"></script>
    <script src="/moment.min.js"></script>
    <script src="/underscore.js"></script>
    <script src="/backbone.js"></script>
    <script src="/models.js"></script>
    <script src="/views.js"></script>
    <script src="/router.js"></script>
    <script>
        var r = new AppRouter({
            main: $("#main"),
            events: new Events(<%- as %>)
        });
        Backbone.history.start({ pushState: true });
    </script>
</body>
</html>
