<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet"  href="/bootstrap.min.css" />
</head>
<body>
    <div id="main"></div>
    <script type="text/template" id="eventsView">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Details</th>
                <th>Date</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody></tbody>
    </script>
    <script type="text/template" id="eventView">
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{details}}</td>
        <td>{{date}}</td>
        <td>{{createdOn}}</td>
    </script>
    <script type="text/template" id="createEventView">
    <div class="modal-header">
        <button class="close">&times;</button>
        <h3> Create New Event </h3>
    </div>
    <div class="modal-body">
    <form>
        <label>Title</label>
        <input type="text" id="title" />
        <label>Details</label>
        <textarea id="details"></textarea>
        <label>Date</label>
        <input type="date" id="date" />    
    </form>
    </div>
    <div class="modal-footer">
        <a href="#" id="create" class="btn btn-primary"> Create </a>
    </div>
    </script>
    <script type="text/template" id="controlsView">
        <li><a href="/create"> Create Event </a></li>
    </script>
    <script src="/jquery.js"></script>
    <script src="/bootstrap.min.js"></script>
    <script src="/underscore.js"></script>
    <script src="/backbone.js"></script>
    <script src="/models.js"></script>
    <script src="/views.js"></script>
    <script src="/router.js"></script>
    <script>
        var r = new AppRouter({
            main: $("#main"),
            events: new Events(<%- as %>)
        });
        Backbone.history.start({ pushState: true });
    </script>
</body>
</html>
