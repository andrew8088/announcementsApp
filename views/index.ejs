<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet"  href="/bootstrap.min.css" />
</head>
<body>
    <div id="main"></div>
    <script type="text/template" id="announcementsView">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Details</th>
                <th>Date</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody></tbody>
    </script>
    <script type="text/template" id="announcementView">
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>{{details}}</td>
        <td>{{date}}</td>
        <td>{{createdOn}}</td>
    </script>
    <script type="text/template" id="createAnnouncementView">
        <p>Name: <input type="text" id="title" /></p>
        <p>Details: <textarea id="details"></textarea></p>
        <p>Date: <input type="date" id="date" /></p>
        <p><button> Create </button></p>
    </script>
    <script src="/jquery.js"></script>
    <script src="/bootstrap.min.js"></script>
    <script src="/underscore.js"></script>
    <script src="/backbone.js"></script>
    <script src="/models.js"></script>
    <script src="/views.js"></script>
    <script src="/router.js"></script>
    <script>
        var r = new AppRouter({
            main: $("#main"),
            announcements: new Announcements(<%- as %>)
        });
        Backbone.history.start({ pushState: true });
    </script>
</body>
</html>
